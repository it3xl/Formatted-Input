<UserControl x:Class="Leak.Test.MoneyField.Silverlight.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

	<Border Margin="10" Padding="10" BorderBrush="LightGoldenrodYellow" CornerRadius="4" BorderThickness="4">
		<StackPanel>
			<TextBlock Text="Leak.Test.MoneyField.Silverlight" FontWeight="Bold"/>
			<Grid Margin="10"/>
			<TextBlock Text="Instruction: Stay it for a long time. The next memory amount shouldn't constantly increase."/>
			<StackPanel Orientation="Horizontal">
				<TextBlock Text="Used memory: "/>
				<TextBlock x:Name="MegabytesUsedTextBox" Text="-" FontWeight="Bold"/>
				<TextBlock Text=" mB"/>
			</StackPanel>
			
			<Grid Margin="10"/>
			<TextBlock Text="Load place: "/>
			<Grid x:Name="InjectionPlace"/>
		</StackPanel>
	</Border>
</UserControl>
